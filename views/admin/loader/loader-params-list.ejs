<%- include('../../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../../includes/navigation.ejs') %>

            <main>
                <div class="col col-12 px-0">
                    <div class="row w3-theme-d1">
                        <a class="btn w3-theme-d1 my-2" href="show-loader-params"> << Back To Admin Menu</a>
                    </div>
                    <h4 class="text-center w3-theme-d1 pb-3 mb-0">Generic Loader Parameters</h4>
                </div>  
                <% if (params.length > 0) { %>
                    <div class="container-fluid px-0">
                        <table class="table"> 
                          <thead>
                            <tr><th class="pl-4 font-weight-bold">Parameter ID</th>
                                <th class="font-weight-bold">Name</th>
                                <th class="font-weight-bold">Value</th>
                            </tr>
                          </thead>

                        <% for (let param of params) { %>
                            <tr><td class="pl-5"><%= param.param_id %></td>
                                <td><%= param.param_name %></td>
                                <td><%= param.param_value %></td>
                            </tr>
                        <% } %>
                        </table>
                    </div>
                <% } else { %>
                    <h1>No Local Loader Parameters Found!</h1>
                <% } %>
            </main>
            <%- include('../../includes/end.ejs') %>