<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (params.length > 0) { %>
                    <div class="container">
                        <table class="table"> 
                          <thead>
                            <tr><th>Parameter ID</th>
                                <th>Name</th>
                                <th>Value</th>
                            </tr>
                          </thead>

                        <% for (let param of params) { %>
                            <tr><td><%= param.param_id %></td>
                                <td><%= param.param_name %></td>
                                <td><%= param.param_value %></td>
                            </tr>
                        <% } %>
                        </table>
                    </div>
                    <% } else { %>
                        <h1>No Local Loader Parameters Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>