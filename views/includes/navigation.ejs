
<header class="container-fluid w3-theme-l1 mt-lg-0 mx-0 px-0">
    <div class="row mx-0">
        <div class="site-title col-12 mx-0 mx-sm-auto">
     
            <a class="h-100" href="http://txctech.com"> <img class="rounded ml-2 mt-4"  src="/images/logonew.png" alt="TXC Parts Search"/></a>

        </div>

    </div>

    <nav class="navbar navbar-expand-sm navbar-custom justify-content-between w-100 py-0 pr-3">
        <% if (isAuthenticated) { %> 
            <ul class="navbar-nav py-0 ml-4 mt-0">
                <li class="nav-item ">
                    <a class="nav-link text-uppercase px-3 py-3 w-100 <%= path === '/parts' ? 'active' : '' %>" href="/">Parts</a>
                </li>

                <li class="nav-item">
                        <a class="nav-link  text-uppercase px-3 py-3 w-100  <%= path === '/admin/parameters' ? 'active' : '' %>" href="/admin/parameters">Admin
                        </a>
                </li>
            </ul>
        <% } %>  
        <ul class="navbar-nav mt-lg-0">
            <% if (!isAuthenticated && path !== '/login' ) { %>
                <li class="nav-item">
                    <a class="nav-link text-uppercase px-3 py-3 w-100" href="/login">Login</a>
                </li>
            <% } else  if (isAuthenticated) { %>
                <li class="nav-item">
                    <form action="/logout" class="nav-link text-uppercase px-3 py-3 w-100" method="post">  
                        <button class="nav-link" type="submit">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li  class="nav-item px-3 py-3">&nbsp</li>
            <% } %>
        </ul>
    </nav>
</header>

