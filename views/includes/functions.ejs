    formatDollar = function(dollarField) {
        return '$' + parseFloat(dollarField).toFixed(2).replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')
    }

    formatCount = function(intField) {
        return parseFloat(intField).toFixed(0).replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')
    }

    formatTime = function(date) {
